					{{ app.user.email }}
				</span>
				<a href="{{ path("activitys_index") }}">Activit√©s</a>
				<a href="{{ path("plannings_index") }}">Plannings</a>
			{% else %}
				<a href="{{ path('login') }}">Connexion</a>
