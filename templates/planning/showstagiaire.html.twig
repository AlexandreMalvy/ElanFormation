{% extends 'base.html.twig' %}

{% block title %}Hello
	{{ stagiaire.nom ~" "~ stagiaire.prenom }}
{% endblock %}

{% block body %}
	<h1 class="joliH1" >{{ stagiaire.nom ~" "~ stagiaire.prenom }}</h1>
		<p>{{ stagiaire.email }}</p>
		<p>{{ stagiaire.numeroPoleEmploi  }}</p>
		<p>{{ stagiaire.adresse }}</p>
		<p>{{ stagiaire.cp ~" "~ stagiaire.ville }}</p>
		<p>{{ stagiaire.telephone }}</p> 
		{% for session in stagiaire.sessions %}
			<a href="{{ path('session_show', {'id':session.id}) }}"><p>{{ session.titre }}</p></a>
		{% endfor %}
{% endblock %}
